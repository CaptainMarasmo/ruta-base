---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Regístrate | Ruta Base" bgImage="/fondo.png">
  <style>
    .registroWrap {
      max-width: 720px;
      margin: 40px auto 0;
      padding: 0 10px;
    }

    .registroBox {
      max-width: 520px;
      margin: 18px auto 0;
      padding: 16px;
      border-radius: 14px;
      background: rgba(255, 255, 255, 0.75);
      border: 1px solid rgba(0, 0, 0, 0.08);
    }

    .registroBox h3 {
      margin: 0 0 10px;
    }

    .registroBox input {
      width: 100%;
      border: 1px solid rgba(0, 0, 0, 0.18);
      border-radius: 10px;
      padding: 8px 10px;
      font-size: 14px;
      box-sizing: border-box;
      margin-bottom: 8px;
    }

    .registroBox button {
      margin-top: 6px;
      border: 0;
      border-radius: 10px;
      padding: 8px 12px;
      background: rgba(155, 120, 255, 0.22);
      font-weight: 700;
      cursor: pointer;
      width: 100%;
    }

    .registroNote {
      font-size: 13px;
      color: #555;
      margin-top: 8px;
    }
  </style>

  <section class="registroWrap">
    <h1>Regístrate</h1>
    <p class="muted">Crea tu cuenta para guardar tus conversaciones.</p>

    <div class="registroBox">
      <h3>Crear cuenta</h3>
      <form name="registro" method="POST" data-netlify="true" netlify-honeypot="bot-field">
        <input type="hidden" name="form-name" value="registro" />
        <p style="display:none;">
          <label>Si eres un robot, deja esto vacío: <input name="bot-field" /></label>
        </p>
        <input type="text" name="name" placeholder="Nombre" required />
        <input type="email" name="email" placeholder="Email" required />
        <input type="password" name="password" placeholder="Contraseña" required />
        <button type="submit">Registrarme</button>
        <div class="registroNote" id="registroStatus"></div>
      </form>
    </div>
  </section>

  <script>
    const form = document.querySelector("form[name='registro']");
    const statusEl = document.getElementById("registroStatus");

    if (form && statusEl) {
      form.addEventListener("submit", async (e) => {
        e.preventDefault();
        statusEl.textContent = "Enviando...";

        const data = new FormData(form);
        const body = new URLSearchParams();
        for (const [key, value] of data.entries()) {
          body.append(key, value);
        }

        try {
          const res = await fetch("/", {
            method: "POST",
            headers: { "Content-Type": "application/x-www-form-urlencoded" },
            body: body.toString(),
          });
          if (!res.ok) throw new Error("Error");
          form.reset();
          statusEl.textContent = "Usuario registrado.";
        } catch {
          statusEl.textContent = "No se pudo enviar. Intenta más tarde.";
        }
      });
    }
  </script>
</BaseLayout>
