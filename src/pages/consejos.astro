import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Consejos | Ruta Base">
  <style>
    .box{
      max-width: 900px;
      margin: 0 auto;
      padding: 16px;
      border: 1px solid rgba(0,0,0,0.08);
      border-radius: 16px;
      background: rgba(255,255,255,0.55);
      text-align: center;
    }

    h1{ margin: 0 0 12px 0; }

    .img-center{
      display: block;
      margin: 16px auto;
      max-width: 100%;
      height: auto;
      border-radius: 16px;
      border: 1px solid rgba(0,0,0,0.08);
      transform: scale(1);
      transform-origin: center;
    }
  </style>

  <div class="box">
    <h1>Consejos</h1>

    <img class="img-center" src="/consejos.png" alt="Consejos" loading="lazy" />

