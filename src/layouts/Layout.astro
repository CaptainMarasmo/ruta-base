---
const { title = "Ruta Base" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <style>
      body { margin: 0; font-family: Arial; }
      header { background: white; border-bottom: 1px solid #eee; position: sticky; top: 0; }
      nav { padding: 12px; display: flex; gap: 12px; overflow-x: auto; }
      nav a { text-decoration: none; color: #111; padding: 6px 10px; border-radius: 10px; }
      nav a:hover { background: #f3f3f3; }
      main { padding: 18px; max-width: 1000px; margin: 0 auto; }
    </style>
  </head>
  <body>
    <header>
      <nav>
        <a href="/">Ruta Base</a>
        <a href="/viajes">Viajes</a>
        <a href="/ev">EV</a>
        <a href="/msfs">MSFS</a>
      </nav>
    </header>

    <main>
      <slot />
    </main>
  </body>
</html>
